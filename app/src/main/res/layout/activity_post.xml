<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- Genero -->
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="65dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <!-- Edad -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewAge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/background_component_selected"
            app:cardCornerRadius="16dp">

            <!-- Contenido de tu CardView Male -->

        </androidx.cardview.widget.CardView>
        <!-- Peso -->
        <androidx.cardview.widget.CardView
            android:id="@+id/CardviewWeight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="@color/background_component_selected"
            app:cardCornerRadius="16dp">

            <!-- Contenido de tu CardView Female -->

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Agrega aquí el contenido de tu CardView 1 -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">
        <!-- Carrera-->
        <Spinner
            android:id="@+id/spinnerAfterCardViews"
            android:layout_width="match_parent"
            android:layout_height="65dp" />

        <!-- Altura -->
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/rangeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100" />


    </androidx.cardview.widget.CardView>
    <!-- Cuanta comida chatarra -->
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="65dp" />
    <!-- Vasos de agua -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cuanta comida chatarra" />
    <!-- Horas de sueño -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="410dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/background_component_selected"
        >





    </androidx.cardview.widget.CardView>
    <!-- Calidad de sueño -->
    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="65dp" />
    <!-- Actividad fisica -->
    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="65dp" />

    <!-- Enviar -->

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Presiona aquí" />

</LinearLayout>
