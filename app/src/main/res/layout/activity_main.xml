<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.ulagos.MainActivity">

    <Button
        android:id="@+id/btnImc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_imc" />


    <Button
        android:id="@+id/btnTmb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_tmb" />

    <ImageView
        android:id="@+id/infoIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="4dp"
        android:contentDescription="@string/info_icon_description"
        android:src="@drawable/ic_info" /><!-- Aquí debes proporcionar tu propio recurso de imagen para el icono de información -->


</androidx.appcompat.widget.LinearLayoutCompat>